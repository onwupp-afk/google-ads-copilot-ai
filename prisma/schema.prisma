// Prisma schema for Google Ads Copilot AI
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Shopify session store
model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Registered Shopify shops
model Shop {
  id        String   @id @default(uuid()) @db.Uuid
  domain    String   @unique
  plan      String?
  country   String?
  currency  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  scans     Scan[]
}

model Scan {
  id        String   @id @default(uuid()) @db.Uuid
  shopId    String   @db.Uuid
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  market    String
  category  String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  audits    Audit[]

  @@index([shopId])
  @@index([status])
}

model Audit {
  id         String   @id @default(uuid()) @db.Uuid
  scanId     String   @db.Uuid
  scan       Scan     @relation(fields: [scanId], references: [id], onDelete: Cascade)
  ruleCode   String
  severity   String
  message    String
  suggestion String?
  createdAt  DateTime @default(now())

  @@index([scanId])
  @@index([ruleCode])
}
